<UserControl x:Class="Wpf_SmallWorld.InfoJoueur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             FontFamily="Segoe UI Light"
             FontSize="16">
    <Grid>
        <Border BorderThickness="1"  CornerRadius="20" BorderBrush="Black">
            <StackPanel Margin="5,0,0,10"  Name="infoJoueur2">
                <TextBlock Margin="10" Name="Nom"/>
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <!--<Image Source="Resources\Vie.png" Width="30" Margin="0,0,10,0"/>-->
                    <TextBlock Name="Points">Points :</TextBlock>
                </StackPanel>
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <!--<Image Source="Resources\UnitRest.png" Width="30" Margin="0,0,10,0"/>-->
                    <TextBlock Name="Unite">Unités restantes :</TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
